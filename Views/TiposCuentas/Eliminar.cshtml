@model TipoCuenta

@{
    ViewData["Title"] = "Eliminar el tipo de cuenta";
}

<h3 class="mb-3">
    ¿Esta seguro que desea borrar el tipo cuenta @Model.Nombre?
    <h2>
        recuerde antes eliminar todas las cuentas que
        pertenezcan a @Model.Nombre
    </h2>
</h3>

<form asp-action="EliminarTipoCuenta">
    <input type="hidden" asp-for="Id"/>
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>